.Alert.info Enable your microphone and speak one of the options below

.Cues
  .Cues-item(
    ng-class="{success: Choice.selection == 'search'}"
  ) &ldquo;Search&rdquo;

  .Cues-helper(
    ng-class="{active: Choice.state == 'listening', pending: Choice.state == 'processing', error: Choice.state == 'error'}"
    ng-bind="Choice.state"
  ) Disabled

  .Cues-item(
    ng-class="{success: Choice.selection == 'message'}"
  ) &ldquo;Message&rdquo;
