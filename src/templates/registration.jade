.Alert.danger(ng-show="Registration.error") {{Registration.error}}

form(
  name="form",
  ng-submit="Registration.submit(Registration.phone)"
)
  .form-row
    label(for="input-cc") Phone Country
    select(
      id="input-cc",
      ng-model="Registration.phone.cc",
      ng-options="item.value as item.label for item in Registration.countryCodes"
    )

  .form-row
    label(for="input-cc") Phone number
    input(
      type="tel",
      id="input-tel",
      ng-model="Registration.phone.number",
      minlength="4",
      maxlength="15"
      pattern="[0-9]+"
    )

  button(
    class="Button big primary pull-right",
    ng-disabled="form.$pristine || form.$invalid || form.$pending || form.$submitted"
  ) Submit